# Configurações do Ambiente JDTalk
# Copie este arquivo para .env e ajuste conforme necessário

# Ambiente
NODE_ENV=production
PORT=3000

# JWT (Autenticação)
JWT_SECRET=senha_muito_segura_para_jwt_substitua_em_producao

# Banco de Dados
DB_HOST=db
DB_USER=jdtalk_user
DB_PASSWORD=jdtalk_password
DB_NAME=jdtalk
MYSQL_ROOT_PASSWORD=root_password_muito_segura

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id
WHATSAPP_ACCESS_TOKEN=seu_token_de_acesso
WHATSAPP_WEBHOOK_TOKEN=token_para_validacao_webhook

# OpenAI (Para recursos de IA)
OPENAI_API_KEY=sua_chave_api_openai

# URLs da Aplicação
APP_URL=https://seu-dominio.com